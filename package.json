{
  "name": "social-links",
  "version": "1.0.15",
  "description": "Validate & sanitize social links",
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "start": "nodemon --ignore './lib' --exec 'npm run build && true'",
    "build": "npm run clean && tsc",
    "clean": "rimraf ./lib",
    "prepare": "npm run build",
    "test": "jest --no-cache ./*",
    "test:watch": "jest --no-cache --watch ./*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gkucmierz/social-links.git"
  },
  "keywords": [
    "social",
    "links",
    "media",
    "social-links",
    "social-media",
    "validate",
    "validation",
    "is-valid",
    "sanitize",
    "sanitization",
    "string",
    "manipulation",
    "regexp",
    "regex",
    "regular expression",
    "regular",
    "expression",
    "trim",
    "url",
    "linkedin",
    "twitter",
    "facebook",
    "youtube",
    "twitch",
    "instagram",
    "patreon",
    "github",
    "medium",
    "dribbble",
    "behance"
  ],
  "author": "Grzegorz Kucmierz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gkucmierz/social-links/issues"
  },
  "homepage": "https://github.com/gkucmierz/social-links#readme",
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  }
}
