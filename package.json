  "homepage": "https://github.com/gkucmierz/social-links#readme",
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "edit-json-file": "^1.4.0",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^5.1.6",
